{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ManageHostedZoneRecords",
            "Effect": "Allow",
            "Action": [
                "route53:GetHostedZone",
                "route53:ChangeResourceRecordSets",
                "route53:ListResourceRecordSets"
            ],
            "Resource":
                "arn:aws:route53:::hostedzone/Z07020222557K96HMZHF8"
        },
        {
            "Sid": "MonitorChange",
            "Effect": "Allow",
            "Action": [
                "route53:GetChange"
            ],
            "Resource": "arn:aws:route53:::change/*"
        }
    ]
}
